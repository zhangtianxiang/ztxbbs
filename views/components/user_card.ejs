<div class="ztxbbs_user_card ztxbbs_clickable" href="<%= '/users/'+user.id %>" style="display: flex; flex-direction: row;" onclick="OnClick(this)">
  <div class="image" style="width: 70px; height: 70px;">
    <div class="ui rounded image" style="background-image: url('/images/avatars/<%= getbasename(user.avatar) %>');height:60px; width:60px; background-color: #333; background-position-x: 50%; background-position-y: 50%; background-size: contain; background-repeat: no-repeat; box-shadow:2px 2px 8px 0px #333"></div>
  </div>

  <div>
    <div>
      <div>
        <a class="ztxbbs_innerlink middle_font ztxbbs_white_link small_text_shadow" href="<%= '/users/'+user.id %>"><%= user.nickname %></a>
      </div>
      <div>
        <a class="ztxbbs_innerlink small_font ztxbbs_white_link" href="<%= '/users/'+user.id %>"><%= user.username %></a>
      </div>
    </div>
    <div>
      <div class="description_white">
        <%= user.description %>
      </div>
    </div>
  </div>
</div>