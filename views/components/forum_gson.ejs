<div class="ui segment ztxbbs_clickable ztxbbs_hover" href="<%= 'http://'+serverurl.toString()+'/community/forums/'+forum.id.toString() %>" onclick="OnClick(this)">
  <div class="ui grid">
    <div class="ui twelve wide computer sixteen wide tablet sixteen wide mobile column" style="padding-top: 10px; padding-bottom: 5px;">
      <a class="item ztxbbs_innerlink" href="<%= 'http://'+serverurl.toString()+'/community/forums/'+forum.id.toString() %>"><%= forum.title %></a>
      <div class="description  "><%= forum.description %></div>
          <% if (forum.son && forum.son.length > 0) { %>
        <div class="ui horizontal link list">
              <% for (son of forum.son) { %>
                  <a class="item ztxbbs_innerlink" href="<%= 'http://'+serverurl.toString()+'/community/forums/'+son.id.toString() %>" style="font-size: 12px;"><i class="bars icon"></i><%= son.title %></a>
              <% } %>
        </div>
          <% } %>
    </div>
    <div class="ui four wide computer only column" style="background-color: #eee;">
      <div class="small_font oneline_text" title="<%= forum.last_reply_topic %>">
        <a href="<%= forum.last_reply_tid %>" class="ztxbbs_innerlink small_font"><%= forum.last_reply_topic %></a>
      </div>
      <div class="small_font oneline_text">
        <%= moment(forum.last_reply_time).fromNow() %> by <a class="ztxbbs_innerlink" href="<%= 'http://'+serverurl.toString()+'/users/'+forum.last_reply_uid.toString() %>"><%= forum.last_reply_nickname %></a>
      </div>
    </div>
  </div>
</div>